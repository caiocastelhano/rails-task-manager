<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p><%= @task.completed ? '[X] This task is completed' : '[ ] This task is not completed yet ' %></p>

<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>

<p><%= link_to 'Delete this task', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" } %>

<p><%= link_to 'Back to list', tasks_path(@task) %></p>